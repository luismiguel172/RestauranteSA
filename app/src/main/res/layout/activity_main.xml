<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center|top"
        android:text="Calculadora de Gorjeta"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="35dp"
        android:text="Valor da Conta:"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:layout_height="50dp"
        app:boxCornerRadiusBottomEnd="20px"
        app:boxCornerRadiusBottomStart="20px"
        app:boxCornerRadiusTopEnd="20px"
        app:boxCornerRadiusTopStart="20px">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Valor" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="25dp"
        android:text="Qualidade do serviÃ§o:"
        android:textColor="#000"
        android:textSize="15sp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="330dp"
        android:layout_height="50dp">

        <Spinner
            android:layout_width="330dp"
            android:layout_height="50dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:backgroundTint="#1DBF11"
        android:hint="Calcular Gorjeta"
        android:textColorHint="#FFF" />

</LinearLayout>